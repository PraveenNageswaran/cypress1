import groovy.json.JsonSlurper
import java.io.File

// Read JSON data from a file and parse it
def parseJsonFromFile(fileName) {
    new JsonSlurper().parse(new File(fileName))
}

// Read JSON data from the first file
def json1Data = parseJsonFromFile("json1.json")

// Read JSON data from the second file
def json2Data = parseJsonFromFile("json2.json")

// Iterate through both JSON data together
[json1Data, json2Data].eachWithIndex { jsonData, index ->
    println "JSON ${index + 1}:"
    jsonData.each { key, value ->
        println "Key: $key"
        println "Value: $value"
        if (value instanceof Map) {
            value.each { innerKey, innerValue ->
                println "  Key: $innerKey"
                println "  Value: $innerValue"
            }
        }
    }
}
