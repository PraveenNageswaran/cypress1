import groovy.json.JsonSlurper
import java.io.File

// Read JSON data from json1.json
def json1Data = new JsonSlurper().parse(new File("json1.json"))

// Read JSON data from json2.json
def json2Data = new JsonSlurper().parse(new File("json2.json"))

// Iterate through each JSON object in both arrays together
[json1Data, json2Data].each { jsonArray ->
    jsonArray.eachWithIndex { jsonObject, index ->
        println "Object ${index + 1}:"
        jsonObject.each { key, value ->
            println "Key: $key"
            println "Value: $value"
            if (value instanceof Map) {
                value.each { innerKey, innerValue ->
                    println "  Key: $innerKey"
                    println "  Value: $innerValue"
                }
            }
        }
    }
}
