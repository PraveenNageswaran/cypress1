import com.fasterxml.jackson.databind.*
import groovy.json.JsonOutput

// âœ… Fetch K5 record (current iteration unique ID)
def uniqueId = vars.get("k5_id")?.trim()
log.info("ðŸ”¹ Validating Unique ID: " + uniqueId)

// âœ… Fetch the stored K4 record (matched in the previous step)
def k4Json = vars.get("k4_record")
if (!k4Json) {
    log.warn("âŒ No matching K4 record found for ID: " + uniqueId)
    return
}

// âœ… Convert JSON Strings to Objects
def objectMapper = new ObjectMapper()
def k5Record = objectMapper.readTree(vars.get("k5_record"))  // K5 record stored earlier
def k4Record = objectMapper.readTree(k4Json)  // K4 record from the previous step

// âœ… Compare all fields and find mismatches
def mismatchedFields = []
k5Record.fieldNames().each { field ->
    def k5Value = k5Record.get(field)?.asText()?.trim()
    def k4Value = k4Record.get(field)?.asText()?.trim()

    if (k5Value != k4Value) {
        mismatchedFields << "${field}: K5(${k5Value}) â‰  K4(${k4Value})"
    }
}

// âœ… Log Results
if (mismatchedFields.isEmpty()) {
    log.info("âœ… Validation PASSED for ID: " + uniqueId)
} else {
    log.warn("âŒ Validation FAILED for ID: " + uniqueId)
    log.warn("âš ï¸ Mismatched Fields: \n" + mismatchedFields.join("\n"))
}

// âœ… Store failures in a variable for CSV logging (optional)
vars.put("assertion_mismatch", mismatchedFields.join("; "))
