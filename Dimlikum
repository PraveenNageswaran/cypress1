import groovy.json.JsonSlurper

// âœ… Fetch and store Unique ID locally to avoid overwriting
def currentUniqueId = vars.get("current_unique_id") ?: "UNKNOWN_ID"

// âœ… Fetch JSON records for comparison
def k5_record = vars.get("k5_json") ?: "{}"
def k4_record = vars.get("k4_json") ?: "{}"

// âœ… Parse JSON into objects
def jsonSlurper = new JsonSlurper()
def k5_obj = jsonSlurper.parseText(k5_record)
def k4_obj = jsonSlurper.parseText(k4_record)

// âœ… Compare field-by-field and log results
def mismatchedFields = []
def matchedFields = []

// âœ… Check fields in K5 (to find missing/mismatched fields in K4)
k5_obj.each { key, k5_value ->
    def k4_value = k4_obj[key]  // Get corresponding value from K4 JSON
    if (k4_value == null) {
        mismatchedFields.add("âŒ Key '${key}' is missing in K4")
    } else if (!k5_value.equals(k4_value)) {
        mismatchedFields.add("âŒ Key '${key}' mismatch: K5='${k5_value}', K4='${k4_value}'")
    } else {
        matchedFields.add("âœ… Key '${key}' matched: '${k5_value}'")
    }
}

// âœ… Check fields in K4 (to find extra fields in K4 that are not in K5)
k4_obj.each { key, k4_value ->
    if (!k5_obj.containsKey(key)) {
        mismatchedFields.add("âŒ Extra key '${key}' found in K4 but missing in K5")
    }
}

// âœ… Log results
if (!mismatchedFields.isEmpty()) {
    Failure = true
    FailureMessage = "âŒ Validation failed for ID: ${currentUniqueId}\n" + mismatchedFields.join("\n")
    log.error("âŒ Validation failed for ID: ${currentUniqueId}\n" + mismatchedFields.join("\n"))
} else {
    log.info("âœ… Validation passed for ID: ${currentUniqueId}. All fields matched.")
}

// âœ… Log matching fields (Optional)
log.info("ğŸ”¹ Matching Fields for ID: ${currentUniqueId}:\n" + matchedFields.join("\n"))
