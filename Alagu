Parse the JSON array
def slurper = new JsonSlurper()
def json = slurper.parseText(jsonString)

// Check if it's an array
if (json instanceof List) {
    // Create a new array to accommodate all records
    def newArray = []

    // Loop through each record in the JSON array
    json.each { record ->
        // Add each record to the new array
        newArray.add(record)
    }

    // Print the new array with all records
    println newArray
} else {
    println "Input is not a valid JSON array"
}
