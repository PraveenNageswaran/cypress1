// Split the tableRecord string to extract scheme and eventbody
def parts = tableRecord.substring(1, tableRecord.size() - 1).split(", ")

// Extract scheme and eventbody
def scheme = parts[0].split("=")[1]
def eventBodyString = parts[1].split("=")[1]

// Create JSON object for eventbody
def eventBodyJson = [payload: eventBodyString]

// Create JSON object for the whole record
def jsonObject = [scheme: scheme, eventbody: eventBodyJson]

// Write JSON object to file
def outputFile = new File("output.json")
outputFile << JsonOutput.toJson(jsonObject)

println "JSON object stored in output.json"
